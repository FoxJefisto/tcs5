<!-- A panel showing various bits of information about a player -->
<panel height="170" >
	<boolean id="should_force_refresh" value="true"/>
	<attachment_group class="horizontal_arrange" horizontal_alignment="fill" horizontal_gap="8"/>

	<container>
		<attachment_group class="horizontal_arrange" horizontal_alignment="right,extend" horizontal_gap="8"/>

		<!-- CONTAINER HOLDING KIT AND PLAER PIC -->
		<container>
			<attachment_group class="horizontal_arrange" horizontal_alignment="left" horizontal_gap="-100" />

			<!-- KIT ICON AND PLAYER STATUS -->
			<container width="250">
				<layout class="stick_to_sides_attachment" apply_to_children="true"/>

				<!-- KIT ICON -->
				<widget id="bak1" class="kit_icon" image_alignment="left" width="100" kit_zoom_level="3" priority="1" late_loading="true" >
					<record id="object_property" get_property="Pers" set_property="objt"/>
				</widget>

				<!-- STATUS INDICATORS -->
				<widget class="player_status_all_button" id="psAB" maximised="true" auto_size="vertical" alignment="bottom" gap="-2" max_items_per_row_or_column="6">
					<layout class="stick_to_sides_attachment" alignment="top,right" inset="0,2"/>
					<record id="object_property" get_property="Pnfa"/>
				</widget>
			</container>

			<!-- PLAYER FACE -->
			<container width="200">
				<layout class="stick_to_sides_attachment" apply_to_children="true"/>

				<widget class="object_portrait_picture" id="face" width="100" image_alignment="left,bottom" scale_picture="true" keep_aspect_ratio="true">
					<record id="object_property" get_property="objt"/>
				</widget>
			</container>
		</container>

		<!-- CLUB AND NATION LOGO -->
		<container width="70">
			<attachment_group class="vertical_arrange" vertical_alignment="bottom,extend" />

			<container>
				<attachment_group class="vertical_arrange" vertical_alignment="fill" vertical_gap="4"/>

				<!-- CLUB -->
				<container class="tcs_box">
					<layout class="stick_to_sides_attachment" apply_to_children="true"/>

					<!-- IF NO CLUB -->
					<widget class="value_based_picture" scale_picture="true" file="none">
						<list id="value_list">
							<record value="0" file="tcs/icons/unemployed/img"/>
						</list>
						<record id="object_property">
							<list id="get_properties">
								<record get_property="Pcjo" set_property="valu" dont_set_hint="true"/>
							</list>
						</record>
					</widget>

					<!-- IF CLUB -->
					<widget class="object_portrait_picture" id="pclB" image_alignment="centre" scale_picture="true">
						<record id="object_property" dont_set_hint="true" get_property="Pclb" set_property="objt"/>
					</widget>
				</container>

				<!-- NATION LOGO -->
				<container class="tcs_box">
					<layout class="stick_to_sides_attachment" apply_to_children="true"/>

					<widget class="object_portrait_picture" id="npiB" image_alignment="centre" scale_picture="true">
						<record id="object_property" dont_set_hint="true" get_property="PNat" set_property="objt"/>
					</widget>
				</container>
			</container>

			<container >
				<attachment_group class="horizontal_arrange_vertical_autosize_centre" horizontal_alignment="fill" horizontal_offset="0" vertical_inset="0" />

				<record id="default_properties"  appearance="" label_disabled="true" show_hover_popup_on_focus="true" auto_size="vertical" alignment="centre_x" />

				<widget class="player_condition_icon_widget" id="PcOI" >
					<record id="object_property" get_property="PcOI"/>
				</widget>

				<widget class="player_match_sharpness_icon_widget" id="Pfit" >
					<record id="object_property" get_property="Pfit"/>
				</widget>

			</container>

		</container>
	</container>

	<!-- DETAILS TABLE -->
	<container class="tcs_box">
		<attachment_group class="vertical_arrange" vertical_alignment="bottom,extend" />

		<!-- TABLE -->
		<container>
			<attachment_group class="vertical_arrange" vertical_alignment="fill" />

			<container class="tcs_table">
				<attachment_group class="horizontal_arrange" horizontal_alignment="fill"/>

				<!-- AGE + DOB -->
				<container>
					<attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="-4" horizontal_alignment="horizontal" horizontal_inset="0"/>

					<!-- AGE LABEL-->
					<widget class="label" auto_size="vertical" style="semi_bold" >
						<translation id="text" type="use" translation_id="227770" value="Age"/>
					</widget>

					<!-- CONTAINER USED TO SET AGE + DOB HORIZONTALLY -->
					<container>
						<layout class="arrange_horizontal_attachment" alignment="left,extend" offset="0" gap="1"/>
						<layout class="fit_children_attachment" alignment="vertical" gap="0" offset="0"/>
						<layout class="stick_to_sides_attachment" alignment="top" apply_to_children="true" inset="2"/>
						<!-- AGE -->
						<widget class="editable_client_object_property_panel" id="age " height="22" auto_size="horizontal">
							<record id="widget_info" class="formatted_label" alignment="left,top" auto_size="horizontal" >
								<translation id="format" translation_id="242551" type="use" value="[%number#1] years old"/>
							</record>
							<record id="widget_edit_info" width="0" height="0"/>
							<record id="object_property" get_property="Page"/>
						</widget>
						<!-- END OF AGE + DOB -->
					</container>

					<!-- 	<widget class="game_formatted_label" auto_size="all" format="([%date#1-short])" alignment="left, centre_y" size="small" colour="faded text">
						<record id="object_property" get_property="Pdob"/>
					</widget> -->
				</container>

				<!-- VALUE -->
				<container>
					<attachment_group class="vertical_arrange_autosize" vertical_gap="-1" vertical_offset="0" horizontal_alignment="horizontal" horizontal_inset="0"/>

					<widget class="label" id="vall" auto_size="vertical" style="semi_bold" >
						<translation id="text" translation_id="227806" type="use" value="Value"/>
					</widget>
					<widget class="transfer_value_label" id="TrVa" auto_size="all" alignment="left, centre_y" >
						<record id="object_property" get_property="Pdva"/>
					</widget>
				</container>
			</container>

			<!-- DOB AND PERSONALITY -->
			<container class="tcs_table_trans">
				<attachment_group class="horizontal_arrange" horizontal_alignment="fill"/>

				<!-- DOB -->
				<container>
					<attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="0" horizontal_alignment="horizontal" horizontal_inset="0"/>
					<widget class="label" auto_size="vertical" style="semi_bold" >
						<translation id="text" translation_id="230147" type="use" value="Date of Birth"/>
					</widget>
					<widget class="editable_client_object_property_panel" id="dobl" alignment="left,top" auto_size="vertical"  format="[%date#1-short]">
						<record id="widget_info" class="game_formatted_label" auto_size="vertical"/>
						<record id="object_property" get_property="Pdob"/>
					</widget>
				</container>

				<!-- PERSONALITY -->
				<container>
					<attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="-1" horizontal_alignment="horizontal" horizontal_inset="0"/>
					<widget class="label" id="PPs:" auto_size="vertical" style="semi_bold" >
						<record id="object_property" get_property="PPst" name="true"/>
					</widget>
					<widget class="personality_label" id="PPst" auto_size="vertical" >
						<record id="object_property" get_property="PPst"/>
					</widget>
				</container>
			</container>

			<container class="tcs_table">
				<attachment_group class="horizontal_arrange" horizontal_alignment="fill" />

				<!--  PLAYING TIME -->
				<container>
					<attachment_group class="vertical_arrange_autosize" vertical_gap="-1" vertical_offset="0" horizontal_alignment="horizontal" horizontal_inset="0"/>

					<widget class="label" auto_size="vertical" style="semi_bold" >
						<translation id="text" translation_id="492002" type="use" value="Value"/>
					</widget>
					<widget class="playing_time_label" id="Pcpt" auto_size="vertical" alignment="left, centre_y,can_scale" >
						<record id="object_property" get_property="Pcpt"/>
					</widget>
				</container>

				<!-- TRAINING RATING -->
				<container>
					<layout class="stick_to_sides_attachment" apply_to_children="true"/>

					<container>
						<attachment_group class="vertical_arrange_autosize" vertical_gap="-1" vertical_offset="0" horizontal_alignment="horizontal" horizontal_inset="0"/>
						<widget class="label" auto_size="vertical" style="semi_bold" >
							<translation id="text" translation_id="492001" type="use" value="Actual Playing Time[COMMENT: AREA: Playing Time for Players; SUB-AREA: Contract Negotiations; FR-BN: 25975; TONE: Formal; CHARLIMIT: None; REF-ID: n/a; NOTE: concerns how much playing time a player is being promised]"/>
						</widget>
						<widget class="playing_time_label" id="PccV" alignment="left,top,can_scale" auto_size="vertical" >
							<record id="object_property" get_property="Pcpt"/>
						</widget>
					</container>
				</container>
			</container>

			<!-- 		<container class="tcs_table_trans">
		</container> -->
		</container>

		<!--Player extra details (e.g. onloan at...)-->
		<container class="tcs_table_trans" height="14">
			<layout class="stick_to_sides_attachment" apply_to_children="true"/>
			<widget class="player_extra_details_text" size="small" colour="faded text" alignment="centre_x,centre_y" height="14">
				<record id="object_property" get_property="PExD" />
			</widget>
		</container>
	</container>

</panel>