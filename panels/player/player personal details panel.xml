<!-- PANEL THAT SHOWS AT THE TOP OF THE PLAYER OVERVIEW -->
<panel>
	<layout class="stick_to_sides_attachment" apply_to_children="true"/>
	<boolean id="should_force_refresh" value="true"/>

	<!-- MAIN CONTAINER -->
	<container>
		<attachment_group class="horizontal_arrange" horizontal_alignment="left,extend"/>

		<!-- PLAYER INFO -->
		<container class="tcs_box" width="520">
			<layout class="stick_to_sides_attachment" apply_to_children="true"/>

			<container>
				<attachment_group class="horizontal_arrange_autosize" vertical_offset="0" horizontal_inset="0"/>

				<!-- CONTAINER HOLDING KIT AND PLAER PIC -->
				<container width="280">
					<attachment_group class="horizontal_arrange" horizontal_gap="-125"/>

					<container width="250">
						<layout class="stick_to_sides_attachment" apply_to_children="true"/>

						<widget id="bak1" class="kit_icon" image_alignment="left" width="250" kit_zoom_level="3" priority="1" late_loading="true">
							<record id="object_property" get_property="Pers" set_property="objt"/>
						</widget>

						<!-- Status Indicators -->
						<widget class="player_status_all_button" id="psAB" maximised="true" auto_size="vertical" alignment="bottom" gap="-2" max_items_per_row_or_column="6">
							<layout class="stick_to_sides_attachment" alignment="top,right" inset="0,2"/>
							<record id="object_property" get_property="Pnfa"/>
						</widget>
					</container>
				</container>

				<!-- LOGOS AND EXTRA DETAILS -->
				<container width="220" priority="1">
					<attachment_group class="vertical_arrange" vertical_alignment="top,extend"/>

					<container height="55">
						<attachment_group class="horizontal_arrange" horizontal_alignment="fill"/>

						<!-- CLUB -->
						<container class="tcs_box">
							<layout class="stick_to_sides_attachment" apply_to_children="true"/>

							<!-- IF NO CLUB -->
							<widget class="value_based_picture" scale_picture="true" file="none">
								<list id="value_list">
									<record value="0" file="tcs/icons/unemployed/img"/>
								</list>
								<record id="object_property">
									<list id="get_properties">
										<record get_property="Pcjo" set_property="valu" dont_set_hint="true"/>
									</list>
								</record>
							</widget>

							<!-- IF CLUB -->
							<widget class="object_portrait_picture" id="pclB" image_alignment="centre" scale_picture="true">
								<record id="object_property" dont_set_hint="true" get_property="Pclb" set_property="objt"/>
							</widget>
						</container>

						<!-- NATION LOGO -->
						<container class="tcs_box">
							<layout class="stick_to_sides_attachment" apply_to_children="true"/>

							<widget class="object_portrait_picture" id="npiB" image_alignment="centre" scale_picture="true">
								<record id="object_property" dont_set_hint="true" get_property="PNat" set_property="objt"/>
							</widget>
						</container>
					</container>

					<!-- SMALL SELECTOR -->
					<container class="tcs_box">
						<layout class="stick_to_sides_attachment" apply_to_children="true"/>

						<container class="client_object_viewer_selector_panel" id="tcsH" file="player/player overview small header selector panel" save_session_state="true">
							<integer id="default_for_unemployed_managers" value="thPC"/>
							<integer id="default_for_international_managers_other_team" value="thPC"/>
							<integer id="default_for_everyone_else" value="thPC"/>
							<integer id="default_for_versus_mode" value="thPC"/>
						</container>
					</container>
				</container>
			</container>

			<!-- PLAYER FACE -->
			<container>
				<attachment_group class="horizontal_arrange" horizontal_alignment="left,extend"/>

				<container width="120"/>

				<widget class="object_portrait_picture" id="face" width="180" image_alignment="left,bottom" scale_picture="true" keep_aspect_ratio="true">
					<record id="object_property" get_property="objt"/>
				</widget>

				<container/>

			</container>
		</container>

		<container class="horizontal_adaptive_container" gap="4" id="left">
			<attachment_group class="horizontal_arrange" horizontal_alignment="fill"/>

			<record id="default_properties" default_width="-1" minimum_width="340"/>
			
			<container priority="1" class="tcs_box">
				<layout class="stick_to_sides_attachment" apply_to_children="true"/>
				<container class="client_object_viewer_selector_panel" id="tcH1" file="player/player overview header selector panel" save_session_state="true">
					<integer id="default_for_unemployed_managers" value="tper"/>
					<integer id="default_for_international_managers_other_team" value="tper"/>
					<integer id="default_for_everyone_else" value="tper"/>
					<integer id="default_for_versus_mode" value="tper"/>
				</container>
			</container>
			
			<container priority="2" class="tcs_box">
				<layout class="stick_to_sides_attachment" apply_to_children="true"/>
				<container class="client_object_viewer_selector_panel" id="tcHs" file="player/player overview header selector panel" save_session_state="true">
					<integer id="default_for_unemployed_managers" value="thPC"/>
					<integer id="default_for_international_managers_other_team" value="thPC"/>
					<integer id="default_for_everyone_else" value="thPC"/>
					<integer id="default_for_versus_mode" value="thPC"/>
				</container>
			</container>

			<container priority="3" class="tcs_box">
				<layout class="stick_to_sides_attachment" apply_to_children="true"/>
				<container class="client_object_viewer_selector_panel" id="tcH2" file="player/player overview header selector panel" save_session_state="true">
					<integer id="default_for_unemployed_managers" value="thPC"/>
					<integer id="default_for_international_managers_other_team" value="thPC"/>
					<integer id="default_for_everyone_else" value="thPC"/>
					<integer id="default_for_versus_mode" value="thPC"/>
				</container>
			</container>

		</container>

	</container>
</panel>