					</record>
				</list>
			</widget>

			<container class="scrolling_box" id="ScrB" navigation_container="true">
				<flags id="scroll_bar_class" value="scroll_bar_vertical_inbox"/>
				<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0"/>

