<panel>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
	
	<!-- Fix Transparency Issue #36 added the following container to add shadow -->
	<container class="tcs_box" transparency="0.8">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" />
	</container>

	<!-- THE PITCH -->
	<widget	class="pitch_with_tactics" id="pwtc" icon_flags="show_name,show_extra_details,drop_initial_if_possible" >
		<boolean id="vertical" value="true"/>
		<boolean id="pitch_draw_grass" value="false"/>
		<flags id="pitch_alignment" value="centre"/>
		<string id="pitch_line_colour" value="faded text" />
		<string id="player_icon_file" value="tactics/tactics icon info panel review" />
		<boolean id="allow_y_score_adjustment_for_roles" value="true" />
	</widget>

</panel>