<panel>

	<list id="properties_to_forward">
		<record get_property="match_stats_button_enabled" target="mstx" set_property="hidn" />
		<record get_property="match_stats_button_enabled" target="mstb" set_property="Shwn" />
	</list>

	<attachment_group class="vertical_arrange" vertical_alignment="top,extend" horizontal_inset="0" vertical_gap="8" />

    <container id="Msts">
		<attachment_group class="vertical_arrange_autosize" />
		<widget class="text" id="mstx" font="champions bold" auto_size="vertical" alignment="centre" colour="title">
			<translation id="text" translation_id="247439" type="use" value="Match Stats" />
		</widget>

		<container id="mstb" hidden="true">
			<attachment_group class="horizontal_arrange_vertical_autosize" horizontal_alignment="middle" />

			<widget class="icon_button" font="champions bold" auto_size="all" alignment="centre" click_event="OFsD" icon="icons/16px/maximise" icon_alignment="right" appearance="buttons/subtle/normal/button" navigation_focus_target="true" colour="title" icon_colour="title">
				<translation id="text" translation_id="247439" type="use" value="Match Stats" />
			</widget>
		</container>

		<widget class="match_stats_panel" id="mStO" auto_size="vertical" file="file">

	<!--This panel is for the mini overview stats we get on the match overview page-->
	<attachment_group class="vertical_arrange_autosize" />

	<boolean id="show_bars" value="false" />

	<list id="preset_stats_list">
		<record id="m_sg" />
		<record id="m_on" />
		<record id="m_xg" />
		<record id="m_cr" />		
		<record id="m_fl" />
		<record id="m_yc" />
		<record id="m_pc" />
		<record id="m_ps" />
	</list>

	<widget class="table" id="mstn" layout="5,-2,-6,-2,5" mode="printable" row_spacing="2" row_height="22" fixed_size_rows="true" auto_size="vertical">

		<list id="column_widget_properties">
			<record indx="1" alignment="left,centre_y" colour="text" font="champions bold"/>
			<record indx="2" alignment="centre" colour="text" font="champions body" />
			<record indx="3" alignment="right,centre_y" colour="text" font="champions bold"/>
		</list>

		<list id="column_table_properties">
			<record indx="1" id="home" sort_disabled="true" />
			<record indx="2" id="labl" sort_disabled="true" />
			<record indx="3" id="away" sort_disabled="true" />
		</list>

	</widget>
		</widget>

	</container>

	<widget class="horizontal_divider" height="1" />

	<container id="NEve">
		<attachment_group class="vertical_arrange" vertical_alignment="top,extend" vertical_offset="0" horizontal_inset="0" />

		<widget class="text" font="champions bold" auto_size="vertical" alignment="centre" colour="title">
			<translation id="text" translation_id="515063" type="use" value="Notable Events[COMMENT: AREA: Match panel; SUB-AREA: match caption; FR: 32364; TONE: Formal; CHARLIMIT: None; NOTE: title text for showing notable events from the match; goals, cards etc]" />
		</widget>

		<widget class="table" id="miit" layout="-1,24,40,24,-1" mode="fill_rows" navigation_container="true" row_spacing="0" row_height="22" fixed_size_rows="true" >

			<list id="column_widget_properties">
				<record index="0" spec="text" alignment="right,centre_y" colour="fg" font="champions bold"/>
				<record index="1" icon_alignment="centre" colour="fg" font="champions bold"/>
				<record index="2" spec="text" style="bold" alignment="centre" colour="fg" font="champions bold"/>
				<record index="3" icon_alignment="centre" colour="fg" font="champions bold" />
				<record index="4" spec="text" alignment="left,centre_y" colour="fg" font="champions bold"/>
			</list>

			<list id="column_table_properties">
				<record index="0" id="homt" />
				<record index="1" id="homi" />
				<record index="2" id="time" />
				<record index="3" id="awai" />
				<record index="4" id="awat" />
			</list>

		</widget>

	</container>

</panel>
